<Window x:Class="TestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestApp"
        xmlns:screenKeyboard="clr-namespace:ScreenKeyboard;assembly=ScreenKeyboard"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="1080" 
        x:Name="Root">
    <StackPanel>
        <TextBox Height="50"></TextBox>
        <screenKeyboard:ScreenKeyboardControl Height="500" Width="1080" ViewModel="{Binding KeyboardViewModel, ElementName=Root}"></screenKeyboard:ScreenKeyboardControl>
    </StackPanel>
</Window>
